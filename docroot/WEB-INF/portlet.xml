<?xml version="1.0"?>

<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" version="2.0">
	<portlet>
		<portlet-name>RCS-twitter</portlet-name>
		<display-name>RCS twitter portlet</display-name>
		<portlet-class>com.liferay.util.bridges.mvc.MVCPortlet</portlet-class>
		<init-param>
			<name>view-template</name>
			<value>/view.jsp</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
		</supports>
		<portlet-info>
			<title>RCS twitter portlet</title>
			<short-title>RCS twitter portlet</short-title>
			<keywords>RCS twitter portlet</keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
	<portlet>
		<portlet-name>twittersettings</portlet-name>
		<display-name>Twittersettings</display-name>
		<portlet-class>com.rcs.portlet.TwitterSetting</portlet-class>
		<init-param>
			<name>view-template</name>
			<value>/html/twitterSetting/view.jsp</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
		</supports>
		<resource-bundle>com.rcs.content.twitter-settings.Language</resource-bundle>
		<portlet-info>
			<title>Twittersettings</title>
			<short-title>Twittersettings</short-title>
			<keywords></keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
	<portlet>
		<portlet-name>scheduler-settings</portlet-name>
		<display-name>Scheduler Settings</display-name>
		<portlet-class>com.rcs.portlet.SchedulerSettings</portlet-class>
		<init-param>
			<name>view-template</name>
			<value>/html/schedulerSettings/edit.jsp</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports> 
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
		</supports>
  		<resource-bundle>com.rcs.content.scheduler-settings.Language</resource-bundle>
		<portlet-info>
			<title>Scheduler Settings</title>
			<short-title>Scheduler Settings</short-title>
			<keywords></keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
	<portlet>
		<portlet-name>display-tweets</portlet-name>
		<display-name>Display Tweets</display-name>
		<portlet-class>com.rcs.portlet.DisplayTweets</portlet-class>
		<init-param>
			<name>view-template</name>
			<value>/html/displayTweets/view.jsp</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
		</supports>
  		<resource-bundle>com.rcs.content.display-tweets.Language</resource-bundle>
		<portlet-info>
			<title>Display Tweets</title>
			<short-title>Display Tweets</short-title>
			<keywords></keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
</portlet-app>